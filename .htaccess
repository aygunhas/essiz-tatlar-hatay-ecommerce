# Eşsiz Tatlar Hatay'dan - URL Yeniden Yazma
# Tüm istekleri public/index.php'ye yönlendirir

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Gerçek dosya veya klasör yoksa public/index.php'ye yönlendir
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/index.php?url=$1 [QSA,L]
</IfModule>
